{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "declaration": true,
    },
    "typedocOptions": {
        "name": "Proofable Node SDK",
        "mode": "library",
        "out": "docs/reference",
        "includeDeclarations": true,
        "excludeExternals": true,
        "gitRevision": "master",
        "exclude": [
            "**/*.test.ts",
            "tests/**/*",
            "src/examples/*"
        ],
        "listInvalidSymbolLinks": true,
        "readme": "none",
        "entryPoint": "\"index\""
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src",
        "tests",
    ]
}
