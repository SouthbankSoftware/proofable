{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@SDK/*": [
                "src/*"
            ],
        }
    },
    "typedocOptions": {
        "mode": "library",
        "out": "docs",
        "includeDeclarations": true,
        "excludeExternals": true,
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
