{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "declaration": true,
    },
    "typedocOptions": {
        "mode": "library",
        "out": "docs",
        "includeDeclarations": true,
        "excludeExternals": true,
        "gitRevision": "master",
        "exclude": [
            "**/*.test.ts",
            "tests",
        ]
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src",
        "tests",
    ]
}
